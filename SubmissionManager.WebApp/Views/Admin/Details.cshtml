@using SubmissionManager.Data.Entities;    
@model Submission

@{
    ViewData["Title"] = @Model.Title;
}

<h1>@Model.Title</h1>

<h2>@Model.Author</h2>

<p><b>Email:</b> @Model.Email</p>

<p><b>Document:</b> @Model.Title</p> <a class="btn btn-primary" asp-action="Download" asp-route-id="@Model.Id">Download</a>

<p><b>Date Submitted:</b> @Model.DateSubmitted.ToShortDateString()</p>

<p><b>Word Count:</b> @Model.WordCount</p>

<p><b>Status:</b> @Model.Status</p>

<p><b>Cover Letter</b></p>

<p>@Model.CoverLetter</p>

<a class="btn btn-primary" asp-action="Advance" asp-route-id="@Model.Id">Advance</a>

<a class="btn btn-primary" asp-action="Accept" asp-route-id="@Model.Id">Accept</a>

<a class="btn btn-primary" asp-action="Reject" asp-route-id="@Model.Id">Reject</a>