@using SubmissionManager.Data.Entities;    
@model IEnumerable<Submission>

@{
    ViewData["Title"] = "Submissions";
}

<h1>Submissions</h1>

<table class="table">
    <thead>
        <th>Id</th>
        <th>Author</th>
        <th>Title</th>
        <th>Status</th>
        <th>Date Submitted</th>
        <th></th>
        <th></th>
        <th></th>
    </thead>
    <tbody>
        @foreach (var submission in Model)
        {
            <tr>
                <td>@submission.Id</td>
                <td>@submission.Author</td>
                <td>
                    <a asp-action="Download" asp-route-id="@submission.Id">@submission.Title</a>
                </td>
                <td>@submission.Status</td>
                <td>@submission.DateSubmitted.ToShortDateString()</td>
                <td>
                    <a class="btn" asp-action="Details" asp-route-id="@submission.Id">Details</a>
                </td>
                <td>
                    <a class="btn" asp-action="Advance" asp-route-id="@submission.Id">Advance</a>
                </td>
                <td>
                    <a class="btn" asp-action="Reject" asp-route-id="@submission.Id">Reject</a>
                </td>
            </tr>
        }
    </tbody>
</table>
